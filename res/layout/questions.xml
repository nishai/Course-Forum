<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_background">
    <TextView
            android:text="COURSE FORUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:id="@+id/textView12"
            android:textSize="24sp" android:textColor="@android:color/background_light" android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionHeader"
            android:textSize="24sp"
            android:textColor="@android:color/background_light"
            android:textAllCaps="true"
            android:layout_below="@+id/textView12" android:layout_centerHorizontal="true"/>
    <ImageView
            android:src="@drawable/post"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView3" android:onClick="newQuestion"
            android:layout_alignTop="@+id/textView12" android:layout_toEndOf="@+id/textView12"
            android:layout_marginStart="33dp" android:layout_marginTop="11dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scrollTings"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_height="480dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linLay"/>
    </ScrollView>
</RelativeLayout>