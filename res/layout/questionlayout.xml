<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/qrl">
    <TextView
            android:text="This is a question. I am typing extra stuff to wrap"
            android:gravity="center_vertical"
            android:id="@+id/questionText"
            android:textSize="18sp" android:textColor="@android:color/background_light"
            android:layout_height="48dp"
            android:layout_width="320dp"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="10dp" android:textAlignment="viewStart" android:layout_centerVertical="true"/>
    <ImageView
            android:src="@drawable/filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/votes" android:layout_alignParentStart="true"/>
    <TextView
            android:text="10"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/votes" android:textStyle="normal|bold"
            android:textColor="@android:color/background_light" android:textSize="22sp"
            android:textAlignment="center"
            android:layout_width="50dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="11dp"/>
    <TextView
            android:text="username123"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/userText"
            android:textColor="@android:color/background_light" android:textStyle="normal|italic"
            android:layout_alignBottom="@+id/imageView" android:layout_alignStart="@+id/questionText"/>
    <TextView
            android:text="Answered"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answered"
            android:textColor="@android:color/background_light" android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:layout_marginEnd="14dp"
            android:layout_alignBaseline="@+id/userText" android:layout_alignBottom="@+id/userText"
            android:layout_alignEnd="@+id/questionText"/>
</RelativeLayout>