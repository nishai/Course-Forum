<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/layout_background"
>
    <TextView
            android:text="MOBILE COMPUTING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="31dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:textSize="24sp"
            android:textColor="@android:color/background_light"/>
    <TextView
            android:text="COURSE FORUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24sp"
            android:textColor="@android:color/background_light" android:textStyle="normal|bold"
            android:layout_below="@+id/textView5" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/textView6" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passEdit"
            android:layout_below="@+id/textView8" android:layout_alignStart="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/textView7" android:layout_alignStart="@+id/textView7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userEdit"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView7" android:layout_alignStart="@+id/passEdit"
            android:layout_alignEnd="@+id/passEdit"/>
    <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton" android:onClick="login"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:textSize="20sp" android:elevation="0dp" android:textStyle="normal|bold"
            android:textColor="@android:color/background_light" android:layout_below="@+id/passEdit"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="If you do not have an account, please create one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp" android:id="@+id/textView9"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" android:layout_below="@+id/loginButton" android:layout_centerHorizontal="true"/>
    <Button
            android:text="CREATE NEW USER"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            style="@android:style/Widget.DeviceDefault.Button.Borderless" android:textSize="18sp"
            android:textStyle="normal|bold" android:textColor="@android:color/background_light"
            android:layout_below="@+id/textView9" android:layout_centerHorizontal="true" android:onClick="newUserClick"/>
</RelativeLayout>

